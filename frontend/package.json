{
  "name": "med-expert-panel",
  "version": "0.2.0",
  "description": "Frontend panel for Med Expert Home Assistant integration",
  "main": "dist/med-expert-panel.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf dist",
    "compile": "tsc && npm run bundle",
    "bundle": "node build.js",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "home-assistant",
    "medication",
    "panel"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "lit": "^3.1.0",
    "lit-element": "^4.0.0"
  }
}
